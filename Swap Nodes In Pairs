/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
typedef ListNode* ln;
    ListNode* swapPairs(ListNode* head) {
        if(head==NULL || head->next==NULL){
            return head;
        }
        ln newhead=head->next;
        ln prev=NULL;
        ln first=head;
        ln second=head->next;

        while(first && second){
            ln third=second->next;
            second->next=first;
            first->next=third;
            if(prev!=NULL){
                prev->next=second;
            }
            prev=first;
            first=third;
            if(first!=NULL){
                second=first->next;
            }
        }
        return newhead;
    }
};
