class Solution {
public:
    int maxNumOfMarkedIndices(vector<int>& nums) {
        sort(nums.begin(),nums.end());
        int n=nums.size();
        int l=0;
        int r=(n+1)/2;
        int count=0;
        while(l<n/2 && r<n){
            if(2 * nums[l] <= nums[r]){
                l++;
                r++;
                count+=2;
            }
            else{
                r++;
            }
        }
        return count;
    }
};
